            android:name=".Haushalt"
            android:exported="true" />
        <activity
            android:name=".Einkaufen"
            android:exported="true"
            android:windowSoftInputMode="adjustNothing">
        </activity>

        <activity
            android:name=".Putzen"
            android:exported="true" >

        </activity>

        <activity
            android:name=".ToDo"
            android:exported="true" />
